<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jin.mes.form.basMgt.devtol.pageLog.PageLogMapper">
	<!-- 사용자접속기록 -->
	<sql id="pageLog_base">
			pageLog.page_log_id		AS pageLogId,
			pageLog.page_log_at		AS pageLogAt,
			pageLog.page_id			AS pageId,
			pageLog.page_path		AS pagePath,
			pageLog.user_id			AS userId,
			userInfo.user_nm		AS userNm,
			pageLog.page_log_ip		AS pageLogIp,
			pageLog.page_log_device	AS pageLogDevice
		FROM his_page_log pageLog
		LEFT OUTER JOIN mb_user_info userInfo ON pageLog.user_id = userInfo.user_id
		WHERE 1=1
		<if test="searchText != null and searchText != '' ">
			AND ${searchGubun} LIKE CONCAT('%',#{searchText},'%')
		</if>
		<if test="searchStartDate != null and searchStartDate != '' and searchEndDate != null and searchEndDate != '' ">
			AND pageLog.pageLogAt between #{searchStartDate} AND DATE_ADD(#{searchEndDate},INTERVAL 1 DAY)
		</if>
	</sql>
	
	
	<!-- 사용자 접속기록 조회 (List) -->
	<select id="selectPageLogList"
		parameterType="jin.mes.form.basMgt.devtol.pageLog.PageLogDto"
		resultType="jin.mes.form.basMgt.devtol.pageLog.PageLogDto">
		SELECT * FROM (
				SELECT 
					<choose>
						<when test="sort != null and sort != '' ">
							ROW_NUMBER() OVER(ORDER BY ${sort}) AS RNUM,
						</when>
						<otherwise>
							ROW_NUMBER() OVER(ORDER BY pageLogAt desc) AS RNUM,
						</otherwise>
					</choose>
					<include refid="pageLog_base" />
				)s_table
				WHERE RNUM <![CDATA[ >= ]]> #{firstIndex} AND RNUM <![CDATA[ <= ]]> #{lastIndex}
	</select>
	
	<!-- 사용자 접속기록 조회 (count) -->
	<select id="selectPageLogCount"
	parameterType="jin.mes.form.basMgt.devtol.pageLog.PageLogDto"
		resultType="java.lang.Integer">
			SELECT count(*) 
				FROM (
					SELECT
					<include refid="pageLog_base" />
				)c_table
	</select>
	
	<!-- 사용자 접속기록 수정 -->
	<insert id="insertPageLog" parameterType="jin.mes.form.basMgt.devtol.pageLog.PageLogDto">
	<selectKey keyProperty="pageLogId" resultType="java.lang.String" order="BEFORE">
		SELECT CREATE_PK('PGLG') AS pageLogId
	</selectKey>
		INSERT INTO his_page_log(
			page_log_id,
			page_log_at,
			page_id,
			page_path,
			user_id,
			page_log_ip,
			page_log_device
		)VALUES(
			#{pageLogId},
			NOW(),
			#{pageId},
			#{pagePath},
			#{userId},
			#{pageLogIp},
			#{pageLogDevice}
		)
	</insert>
	
	<!-- 사용자 접속기록 수정 -->
	<update id="updatePageLog" parameterType="jin.mes.form.basMgt.devtol.pageLog.PageLogDto">
		UPDATE his_page_log
		SET page_id = #{pageId},
			page_path = #{pagePath},
			page_log_at = NOW()
		WHERE page_log_id  = #{pageLogId}
	</update>
</mapper>