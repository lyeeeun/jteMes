@CHARSET "UTF-8";
/* 전역 설정 */
* {
    font-family: NanumGothic, "Dotum", "Tahoma";
    font-size: 15px;
}

body {
	height: 100%;
	width: 100%;
	margin: 0px;
	display: table;
	background-color: #f4f4f4;
	background-image: url(/resources/mes/img/login_bg1.png);
	background-position: center;
	background-repeat: no-repeat;
	position: fixed;
    background-attachment: fixed;
}

.login-back {
    display: table-cell;
    vertical-align: middle;
}

.login-box {
    display: block;
    width: 730px;
    height: 980px;
    margin: auto;
    background-image: url(/resources/mes/img/login_bg2_JINTECH.png);
    background-size: contain !imfortant;
	background-repeat: no-repeat;
	position: relative;
    margin-bottom: 50px;
    margin-right: 700px;
/*     margin-right: 350px;
    margin-top: -100px; */
    
}

.login-input-area {
    display: inline-block;
    width: 300px;
    height :130px; 
    margin: auto;
    margin-top: 395px;
    margin-left: 425px;
}

.input-id-area div input {
	padding-left:  10px;
	width: 265px;
	height: 28px;
	font-size: 17px;
    border-radius: 4px;
	border: 1px solid #505050;
    margin-bottom: 42px;
}

.input-pw-area div input {
	padding-left:  10px;
	width: 265px;
	height: 28px;
	font-size: 17px;
    border-radius: 4px;
	border: 1px solid #505050;
    margin-bottom: 16px;
    
}

.regi{
    margin-left: 205px;
	color: #0d2056;
	font-size: 15pt;    
    text-decoration: none;
    font-weight: 900;
}


.input-id-area div input {
	margin-top:12px;
}

.input-pw-area div input {
    margin-top: 10px;
}

.login-btn-area {
    display: inline-block;
    width: auto;
    height: auto;
    position: absolute; top: -10px;

}

.login_btn {
    display: inline-block;
	cursor: pointer;
	background-color: #081332;
	font-size: 28pt;
	border-radius: 20px;
	min-width: 190px;
	height: 125px;
	color: white;
	font-weight: 800;
	border: none;
	padding: unset !important;
    
    margin-left: 25px;
    margin-top: 412px;
}

.copy { /** 200421 PC에선 숨겨지도록 변경_LYM **/
	display: none;
