@media screen and (max-width: 1380px){
		.loginback {
			position: relative; /*카피 문구 겹치기 위한 */
		}
		
		.login-box {
			display: block;
			width: 730px;
			height: 980px;
			margin: auto;
			background-image: url(/resources/mes/img/login_bg2.png);
			background-size: contain !imfortant;
			background-repeat: no-repeat;
			position: relative;
			margin-bottom: 0px;
			/* margin-right: 700px; */
			margin-right: 430px;
			margin-top: -100px;
		}
		
		.copy {
			display: inline-block;
			width: 100%;
			text-align: center;
			color: #606060;
			font-size: 12px;
			margin: 0 auto;
			
			position: relative;
			bottom: 310px;
			left: 130px;
}
	
		body {
		background-image: url(/resources/mes/img/login_bg1.png);
		margin-right: 30px;
		}
}


