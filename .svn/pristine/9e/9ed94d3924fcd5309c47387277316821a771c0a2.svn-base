/* 퀵메뉴 시작*/
/*03.12 JJW*/
.quick-menu-area{
	width:100%;
	height:80px;
	lign-height:80px;
	background:#3367D6;
	color:#ffffff;
}
.quick-menu-area ul{
	height:100%;
	margin:0px;
	padding:0px;
	
	list-style:none;
}
.quick-menu-area ul li{
	height:100%;
	margin:0px;
	padding:0px;
	display:inline;
	line-height:80px;
}
.quick-menu-area ul li img{
vertical-align:middle;
}

.header-Logo {
	width: 100px;
}

.k-menu .k-item>.k-link, .k-menu-scroll-wrapper .k-item>.k-link, .k-popups-wrapper .k-item>.k-link {
	background-color: #ffffff;
	font-size: 14px;
	font-weight: bold;
}

.k-group .k-menu-group .k-popup .k-reset {
	color: black;
	padding-right: 90px;
	margin-left: 20px;

}
/* 사용시간 연장 버튼 */
#btnTimeAdd{
	margin: 0 10px 0 10px;
    background: #078aeb;
    color: white;
    padding: 2px;
    border-radius: 4px;
    cursor: pointer;
}

/*드롭다운 메뉴 바탕 색*/
.k-widget .k-reset .k-header .k-menu .k-menu-horizontal {
	background-color: #ffffff;
}

.k-autocomplete.k-state-border-down, .k-autocomplete.k-state-border-up, .k-datepicker-calendar, .k-dropdown-wrap.k-state-active, .k-filebrowser .k-image, .k-grid .k-filter-options, .k-menu .k-menu-group, .k-multiselect.k-state-focused, .k-picker-wrap.k-state-active, .k-popup, .k-time-popup, .k-tooltip {
	background-color: #ffffff;
}

.k-menu-group .k-item:hover, .k-menu-group .k-item.k-state-hover, .k-menu.k-context-menu .k-item:hover, .k-menu.k-context-menu .k-item.k-state-hover {
	background-color: #ffffff;
}

#btnMyInfo {
    margin-top: 5px;
}

#btnMyInfo :hover {
	color: #ff7a7a;
}

#btnLogout :hover {
	color: #ff7a7a;
}
#alarmArea {
	border-right : 1px solid #dfdfdf;
}
.
my-config-area #alarmArea #alarmBadge {
	font-size: 9px;
	border-radius: 15px;
	padding: 0 6px;
	margin-top: -5px;
	margin-left: 2px;
	border-color: red;
	color: white;
	background-color: red;
}

.alarmUnit{
	color: black;
	border-bottom : 1px solid #BDBDBD !important;
}

.alarmUnit-read{
	color: grey;
	border-bottom : 1px solid #BDBDBD !important;
}

.alarmUnit-read :hover, .alarmUnit :hover {
	color: #ff7a7a !important;
}

.k-autocomplete.k-state-border-down, .k-autocomplete.k-state-border-up, .k-datepicker-calendar, .k-dropdown-wrap.k-state-active, .k-filebrowser .k-image, .k-grid .k-filter-options, .k-menu .k-menu-group, .k-multiselect.k-state-focused, .k-picker-wrap.k-state-active, .k-popup, .k-time-popup, .k-tooltip {
	box-shadow: 0 12px 20px 0 rgba(0, 0, 0, .2);
}

.my-config-area ul :hover {
	color: #3367D6;
}

