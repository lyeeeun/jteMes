
	.k-selectable td {
		border-bottom: 1px dotted rgba( 71, 71, 71, 0.3 );
	}

	.machineRun, .performanceGood {
        background-color: rgba( 21, 161, 0, 0.5 );
	}

	.k-grid td.k-state-selected, .k-grid tr.k-state-selected>.machineRun {
		background-color: rgba( 21, 161, 0, 1 );
	}

    .machineStop, .performanceBad {
        background-color: rgba( 255, 61, 61, 0.5 );
    }
    
    .machineHold {
    	font-weight: bold;
        background-color: rgba( 255, 61, 61, 1 );
    }
    
    .k-grid td.k-state-selected, .k-grid tr.k-state-selected>.performanceGood {
    	font-weight: bold;
        background-color: rgba( 21, 161, 0, 1 );
    }