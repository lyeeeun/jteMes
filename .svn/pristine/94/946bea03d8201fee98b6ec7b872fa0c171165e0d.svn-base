/*********** 첫번째 화면의 그리드  ***********/

.mtrltoolMgtForm-jteSingleGrid {
	width:40%; 
	height:100%;
	float: left;
}

.mtrltoolMgtForm-jteSubGrid {
	width:59%; 
	height:100%;
	float: right;
}


.mtrltoolMgtForm div.k-window-content{
