}

.itemStockMgtForm .pop_detail_btn.pop_detail_hide {
	cursor: pointer;
	
	padding-top: 6px;
	padding-bottom: 6px;
	padding-left: 12px;
	padding-right: 12px;
	border: 2px solid #ffffff;
	border-radius: 10px;
	background-color: #0685EB;
	color: #ffffff;
	font-size: 20px;
	font-weight: bold;
}

.itemStockMgtForm .pop_detail_btn.pop_detail_show {
	cursor: pointer;
	
	padding-top: 6px;
	padding-bottom: 6px;
	padding-left: 12px;
	padding-right: 12px;
	border: 2px solid #92B5FC;
	border-radius: 10px;
	background-color: #C7D5F4;
	color: #1b56cf;
	font-size: 20px;
	font-weight: bold;
}

